# ===========================================
# 开发环境配置模板
# ===========================================
# 开发环境的默认配置，包含开发友好的设置

# ===========================================
# A类 - 安全敏感配置（开发环境占位符）
# ===========================================
# 开发环境可以使用占位符，但建议使用真实的测试密钥

JWT_SECRET=dev_jwt_secret_key_12345
DB_PASSWORD=dev_password_123
LLM_API_KEY=dev_llm_api_key_placeholder
API_KEY=dev_api_key_placeholder
VITE_API_KEY=dev_frontend_api_key_placeholder

# ===========================================
# B类 - 环境特定配置
# ===========================================
NODE_ENV=development

# 开发环境服务端点
DATABASE_URL=postgresql://postgres:dev_password_123@localhost:15432/fastify_react_app
REDIS_URL=redis://localhost:6379
API_BASE_URL=http://localhost:8001
WEB_BASE_URL=http://localhost:5173

# 开发环境日志配置
LOG_LEVEL=debug
LOG_FORMAT=pretty

# 开发环境服务器配置
HOST=0.0.0.0
PORT=8001

# 开发环境 CORS 配置
CORS_ORIGIN=http://localhost:5173

# ===========================================
# C类 - 共享业务配置
# ===========================================
PAGINATION_LIMIT=10
PAGINATION_MAX_LIMIT=50
REQUEST_TIMEOUT=60000
UPLOAD_TIMEOUT=300000
MAX_RETRIES=3
RETRY_DELAY=1000
CACHE_TTL=1800
CACHE_MAX_SIZE=500

# 开发环境功能开关
FEATURE_REGISTRATION=true
FEATURE_EMAIL_VERIFICATION=false
FEATURE_2FA=false

# ===========================================
# D类 - 开发工具配置
# ===========================================
DEBUG=true
VERBOSE_LOGGING=true
MOCK_API=false
SEED_DATA=true
HOT_RELOAD=true

# 开发环境测试数据库
TEST_DATABASE_URL=postgresql://postgres:test_password@localhost:15433/fastify_react_app_test
TEST_REDIS_URL=redis://localhost:6380

# ===========================================
# LLM 配置（开发环境）
# ===========================================
LLM_DEFAULT_PROVIDER=deepseek
LLM_DEFAULT_MODEL=deepseek-chat
LLM_BASE_URL=https://api.deepseek.com/v1
LLM_TIMEOUT=60000
LLM_MAX_RETRIES=3
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2000
LLM_TOP_P=1.0
LLM_FREQUENCY_PENALTY=0.0
LLM_PRESENCE_PENALTY=0.0

# ===========================================
# 应用配置（开发环境）
# ===========================================
VITE_APP_TITLE=Fastify React App (Dev)
VITE_APP_VERSION=1.0.0-dev
VITE_APP_DESCRIPTION=开发环境 - 现代化全栈应用
JWT_EXPIRES_IN=24h
