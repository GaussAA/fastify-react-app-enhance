# ===========================================
# 测试环境配置模板
# ===========================================
# 测试环境的配置，专门用于自动化测试

# ===========================================
# A类 - 安全敏感配置（测试环境占位符）
# ===========================================
# 测试环境可以使用固定的测试密钥

JWT_SECRET=test_jwt_secret_key_12345
DB_PASSWORD=test_password_123
LLM_API_KEY=test_llm_api_key_placeholder
API_KEY=test_api_key_placeholder
VITE_API_KEY=test_frontend_api_key_placeholder

# ===========================================
# B类 - 环境特定配置
# ===========================================
NODE_ENV=test

# 测试环境服务端点
DATABASE_URL=postgresql://postgres:test_password_123@localhost:15433/fastify_react_app_test
REDIS_URL=redis://localhost:6380
API_BASE_URL=http://localhost:8002
WEB_BASE_URL=http://localhost:5174

# 测试环境日志配置
LOG_LEVEL=error
LOG_FORMAT=json

# 测试环境服务器配置
HOST=0.0.0.0
PORT=8002

# 测试环境 CORS 配置
CORS_ORIGIN=http://localhost:5174

# ===========================================
# C类 - 共享业务配置
# ===========================================
PAGINATION_LIMIT=5
PAGINATION_MAX_LIMIT=20
REQUEST_TIMEOUT=10000
UPLOAD_TIMEOUT=60000
MAX_RETRIES=1
RETRY_DELAY=100
CACHE_TTL=60
CACHE_MAX_SIZE=100

# 测试环境功能开关
FEATURE_REGISTRATION=true
FEATURE_EMAIL_VERIFICATION=false
FEATURE_2FA=false

# ===========================================
# D类 - 开发工具配置
# ===========================================
DEBUG=false
VERBOSE_LOGGING=false
MOCK_API=true
SEED_DATA=true
HOT_RELOAD=false

# 测试环境专用数据库
TEST_DATABASE_URL=postgresql://postgres:test_password_123@localhost:15433/fastify_react_app_test
TEST_REDIS_URL=redis://localhost:6380

# ===========================================
# LLM 配置（测试环境）
# ===========================================
LLM_DEFAULT_PROVIDER=deepseek
LLM_DEFAULT_MODEL=deepseek-chat
LLM_BASE_URL=https://api.deepseek.com/v1
LLM_TIMEOUT=10000
LLM_MAX_RETRIES=1
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=1000
LLM_TOP_P=1.0
LLM_FREQUENCY_PENALTY=0.0
LLM_PRESENCE_PENALTY=0.0

# ===========================================
# 应用配置（测试环境）
# ===========================================
VITE_APP_TITLE=Fastify React App (Test)
VITE_APP_VERSION=1.0.0-test
VITE_APP_DESCRIPTION=测试环境 - 现代化全栈应用
JWT_EXPIRES_IN=1h

# ===========================================
# 测试环境说明
# ===========================================
# 1. 测试环境专门用于自动化测试
# 2. 使用独立的测试数据库和 Redis
# 3. 超时时间较短，便于快速测试
# 4. 启用 MOCK_API 和 SEED_DATA 便于测试
# 5. 日志级别设置为 error，减少测试输出
# 6. JWT 过期时间较短，便于测试会话管理
